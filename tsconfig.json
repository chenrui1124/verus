{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@verus-ui/docs/*": ["./packages/docs/*"],
      "@verus-ui/common": ["./packages/ui/common/index.ts"],
      "@verus-ui/components": ["./packages/ui/components/index.ts"],
      "@verus-ui/ts": ["./packages/ui/ts/index.ts"],
      "@verus-ui/css": ["./packages/ui/index.css"]
    },

    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  "include": ["**/*.vue", "**/*.tsx", "**/*.ts"],
  "exclude": ["lib"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
